<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ynascimento.tp6_pb_calculosalarioliquido.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Insira Seus Dados"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Salário Bruto (em R$)"
        android:textAlignment="center"
        android:textSize="20sp"/>
    
    <EditText
        android:id="@+id/campoSalarioBruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"/>

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de Dependentes"
        android:textAlignment="center"
        android:textSize="20sp"/>
    
    <EditText
        android:id="@+id/campoDependentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pensão Alimentícia (em R$):"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/campoPensao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plano de Saúde:"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/campoPlanoSaude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:inputType="numberDecimal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outros Descontos:"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/campoOutrosDescontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calcular salario"
        android:onClick="btnCalculaSalario"/>


</LinearLayout>
